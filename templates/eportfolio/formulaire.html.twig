<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Téléchargement CV - Portfolio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/lux/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .hero-section {
            background: linear-gradient(135deg, #6c757d 0%, #343a40 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 2rem 0;
            margin-top: 3rem;
        }

        .form-container {
            background-color: #f8f9fa;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .download-options {
            display: none;
        }

        .download-options.show {
            display: block;
            animation: fadeIn 0.5s;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_eportfolio') }}">E-Portfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_eportfolio') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_eportfolio_CV') }}">CV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_eportfolio_passions') }}">Passions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_eportfolio_formulaire') }}">Formulaire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_eportfolio_portfolio') }}">Portfolio</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4">Téléchargement du CV</h1>
            <p class="lead">Veuillez remplir le formulaire pour accéder au CV</p>
        </div>
    </section>

    <!-- Main Content -->
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-container">
                    <form id="downloadForm" onsubmit="showDownloadOptions(event)">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom complet *</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="company" class="form-label">Entreprise</label>
                            <input type="text" class="form-control" id="company">
                        </div>
                        <div class="mb-3">
                            <label for="reason" class="form-label">Raison du téléchargement *</label>
                            <select class="form-select" id="reason" required>
                                <option value="">Choisir une raison</option>
                                <option value="recruitment">Recrutement</option>
                                <option value="internship">Stage</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="consent" required>
                                <label class="form-check-label" for="consent">
                                    J'accepte que mes informations soient utilisées pour être recontacté *
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </form>

                    <div id="downloadOptions" class="download-options mt-4">
                        <h4 class="text-center mb-3">Choisissez votre format</h4>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="{{ asset('documents/CV_Nino_MEREO.pdf') }}" class="btn btn-success" download>
                                <i class="bi bi-file-pdf"></i> Télécharger PDF
                            </a>
                            <a href="{{ asset('documents/CV_Nino_MEREO.docx') }}" class="btn btn-primary" download>
                                <i class="bi bi-file-word"></i> Télécharger DOCX
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2025 E-Portfolio Nino MEREO. Tous droits réservés.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Script -->
    <script>
        function showDownloadOptions(event) {
            event.preventDefault();
            
            // Vérification basique des champs requis
            const form = document.getElementById('downloadForm');
            if (!form.checkValidity()) {
                return false;
            }

            // Afficher les options de téléchargement
            const downloadOptions = document.getElementById('downloadOptions');
            downloadOptions.classList.add('show');

            // Scroll vers les options de téléchargement
            downloadOptions.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>