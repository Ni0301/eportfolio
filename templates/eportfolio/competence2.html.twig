                                    <td>Direction</td>
                                    <td>192.169.135.0/25</td>
                                </tr>
                                <tr>
                                    <td>VLAN 98</td>
                                    <td>Administration</td>
                                    <td>Non routable</td>
                                </tr>
                            </tbody>
